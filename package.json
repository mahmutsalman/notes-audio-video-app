{
  "name": "notes-with-audio-and-video",
  "version": "1.0.0",
  "description": "Audio notes organized by topics with image and video attachments",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "electron",
    "react",
    "audio",
    "notes",
    "sqlite"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fix-webm-duration/fix": "^1.0.1",
    "@monaco-editor/react": "^4.7.0",
    "@soundtouchjs/audio-worklet": "^0.2.1",
    "better-sqlite3": "^11.6.0",
    "ffmpeg-static": "^5.3.0",
    "ffprobe": "^1.1.2",
    "ffprobe-static": "^3.1.0",
    "howler": "^2.2.4",
    "monaco-editor": "^0.55.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-quill-new": "^3.6.0",
    "react-router-dom": "^7.0.2",
    "soundtouchjs": "^0.2.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/howler": "^2.2.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.noteswithaudioandvideo.app",
    "productName": "Notes With Audio And Video",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*",
      "node_modules/ffprobe-static/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "resources/icons/icon.icns",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app needs microphone access to record audio notes"
      }
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icons"
    }
  }
}
